######### Ultralite .htaccess Code
# Generated on: January 3, 2010
# 
# Rename this file to ".htaccess" if you wish to use clean URLs.


Options +FollowSymLinks -Indexes

<IfModule mod_rewrite.c>

RewriteEngine On

# Directory name
RewriteBase /ultralite2/

# Secure sensitive directores and filetypes
RewriteRule (application|cache)/.*$ - [F,L]
RewriteRule \.(sqlite3|ini|db|phtml|htaccess)$ - [F,L]

# Clean url rewriting
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php?mod_rewrite=true&$1 [L,QSA]

</IfModule>